<?xml version="1.0" encoding="UTF-8"?>
	<widget xmlns     = "http://www.w3.org/ns/widgets"
        	xmlns:gap = "http://phonegap.com/ns/1.0"
        	id        = "com.gretacity.app"
        	version   = "1.0">

   <name>gretacity</name>
   <description>La citta' in tasca</description>
   <author href="http://www.gretacity.com" email="info@gretacity.com">gretacity</author>
   <feature name="http://api.phonegap.com/1.0/network"/>
   <preference name="phonegap-version" value="2.9.0" />
   <preference name="target-device" value="universal" />
   
   <gap:plugin name="BarcodeScanner" /> <!-- latest release -->
   <access origin="*" />

   <!-- Icons -->
   <icon src="img/qrcode.png" width="64" height="64" gap:role="default" />
   <icon src="img/qrcode.png" width="72" height="72" gap:platform="android" gap:density="hdpi" />
   <icon src="img/qrcode.png" width="96" height="96" gap:platform="android" gap:density="xhdpi" />
   <icon src="img/qrcode.png" width="72" height="72" gap:platform="ios" />

   <!-- Splash Screens -->
   <gap:splash src="images/splash.png" />
   <gap:splash src="images/splash-160x220.png" gap:platform="android" gap:density="ldpi" />
   <gap:splash src="images/splash.png" gap:platform="android" gap:density="mdpi" />
   <gap:splash src="images/splash-450x650.png" gap:platform="android" gap:density="hdpi" />
   <gap:splash src="images/splash.png" gap:platform="ios" width="320" height="480" />
   
</widget>